@model UBookList.Models.Book
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit book "@Model.Name"</h2>

<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-1">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <input type="submit" asp-action="Edit" value="Update" class="btn btn-sm btn-primary" />
        <input type="submit" asp-action="Index" value="Back" class="btn btn-sm btn-success" />
    </div>
</form>

